{
	"compilerOptions": {
		"lib": ["es2019"],
		"module": "commonjs",
		"target": "es2019",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"n8n-core": ["node_modules/n8n-core"],
			"n8n-workflow": ["node_modules/n8n-workflow"]
		}
	},
	"include": ["nodes/**/*", "credentials/**/*"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
} 